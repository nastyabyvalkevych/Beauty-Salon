
<style>
    .alert{
        width:300px;
        text-align:center;
        right: 0;
        bottom: 0;
        position: absolute;
        border-radius: 30px;
    }
</style>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success notification">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger notification">
        @TempData["Error"]
    </div>
}