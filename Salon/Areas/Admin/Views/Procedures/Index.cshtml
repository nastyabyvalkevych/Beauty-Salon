@model IEnumerable<Procedure>

@{
    ViewData["Title"] = "Procedures";
}

<style>
    p1{
		
        position:relative;
            margin: -14px -34px -28px 6px;
       
    }
    a{
color: pink;
        text-decoration:none;
        font-size:17px;
    }
    a:hover{
       color:hotpink;
       
    }

   
    .container{
        max-width:860px;
    }
    .all{
        padding: 36px 173px 32px 173px;
        background-color: #FCF6FB;
        border-radius: 30px;
        margin: -41px -186px 26px -212px;
    }

    h1 {
        text-transform: uppercase;
        font-family: 'Cormorant';
        font-size: 35px;
        text-align: center;
        color: black;
        margin:20px;

    }
</style>
<h1>Каталог</h1>
<p1>
    <a asp-action="Create"><i class="fa-solid fa-plus"></i></a>
</p1>

<div class="all">
<table class="table">
    <thead>
        <tr>
            <th>Процедура</th>
            <th>Ціна</th>
            <th>Категорія</th>
            <th>Фото</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price.ToString("C2")
                </td>
                <td>
                    @item.Category.Name
                </td>
                <td>
                    <img src="~/media/procedures/@item.Image" width="100" alt="" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="confirmDeletion"><i class="fa-solid fa-eraser"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
<div class="d-flex w-100 justify-content-center">
    <pagination page-count="@ViewBag.TotalPages"
                page-target="/admin/procedures/@ViewBag.CategorySlug"
                page-number="@ViewBag.PageNumber"
                page-range="@ViewBag.PageRange">
    </pagination>
</div>
